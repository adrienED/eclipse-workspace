	public int compteVoy (String S) {
		int n= 0;
		String l= "aeiouy";
		for (int i =0 ; i<S.length();i++) {
			
			/*if (S.charAt(i)=='a' ||
			S.charAt(i)=='e'||
			S.charAt(i)=='i'||
			S.charAt(i)=='o'||
			S.charAt(i)=='u'||
			S.charAt(i)=='y')
				n=n+1;*/
			if (l.indexOf(S.charAt(i))>=0) 
				n++;	

		}	
		return n;
}
	
	public String remplace (String S,char a,char b) {
		String R= "";
		for (int i=0; i<S.length();i++) {
				if (S.charAt(i)==a)
					R+=b;
				else
					R+=S.charAt(i);
		}
		return R;
		}
		
	
	
	
	public String remplaceAutrefacon(String S, char a , char b) {
		char[]s=S.toCharArray();
				for (int i =0; i<S.length();i++) {
					if(s[i]==a)
						s[i]=b;
				}
				return (new String (s));
	
	}
	
	public String palindrome (String s, String m) {
		int n = 0;
		if (s.length()==m.length()) {
			for (int i=0;i<5;i++ ) {
				for (int k=5;k>-1;i--) {
				if (s.charAt(i)==m.charAt(k)) {
					n++;
					
				}
				}
			}
			if (n==s.length()) 
				return "Palindrome";
				
				
				
				
	}
	
	return "Pas Palindrome";

	}
}
