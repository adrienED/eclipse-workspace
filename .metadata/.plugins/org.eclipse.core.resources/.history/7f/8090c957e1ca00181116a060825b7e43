import java.util.Scanner;

public class DemoString {

	public static String Saisie() {
		System.out.println("Entre chaine de caractère");
		Scanner sc = new Scanner(System.in);
		String s = sc.nextLine();

		return s;

	}

	public static void affiche(String s) {
		int y = s.length();

		System.out.println("chaine recue : " + s + ";" + " longueur totale : " + y);
	}

	public static void affiVertical(String s) {

		for (int i = 0; i < s.length(); i++) {
			System.out.println(s.charAt(i));
			if (i < s.length() - 1) {
				System.out.println();

			}

		}
	}
	
	public static void compteCar(String s, char c) {
		int compt=0;
		for (int i = 0; i<s.length();i++) {
			if (s.charAt(i)==c){
				compt++;
			}
		}

		
		
	System.out.println(s+" nombre de "+c+" = "+compt);
	}
	
}

